CONFIG_DIR="$HOME/.config/sketchybar"
PLUGIN_DIR="$HOME/.config/sketchybar/plugins"
FONT_FACE="Maple Mono NF"
ICON_FONT_FACE="SF Pro"

source "$CONFIG_DIR/colors.sh"

##### Bar Appearance #####
# https://felixkratz.github.io/SketchyBar/config/bar

bar=(
    height=38
    blur_radius=0
    corner_radius=0
    margin=0
    notch_width=240
    position=top
    sticky=on
    padding_left=12
    padding_right=8
    color=$BAR_COLOR
)
sketchybar --bar "${bar[@]}"

default=(
    updates=when_shown
    background.padding_left=2
    background.padding_right=2
    background.corner_radius=5
    background.height=24
    icon.color=$ICON_COLOR
    icon.font="$ICON_FONT_FACE:Regular:14.0"
    icon.padding_left=8
    icon.padding_right=7
    label.font="$FONT_FACE:Bold:12.0"
    label.color=$LABEL_COLOR
    label.padding_left=0
    label.padding_right=7
)
sketchybar --default "${default[@]}"

# INFO: left-side bar components
# INFO: add space config at maximum for 8 spaces
for i in {0..11};
do
    sid=$(($i+1))
    space=(
        space=$sid
        icon=$sid
        icon.font="$FONT_FACE:Bold:13.0"
        background.color=$BAR_BORDER_COLOR
        background.corner_radius=5
        background.padding_right=5
        background.drawing=off
        label.drawing=off
        script="$PLUGIN_DIR/current_space.sh"
        click_script="yabai -m space --focus $sid"
    )
    sketchybar --add space space.$sid left  \
               --set space.$sid "${space[@]}"
done

front_app=(
  display=active
  icon.background.drawing=on
  icon.background.image.scale=0.75
  label.font="$FONT_FACE:Bold:12.0"
  label.padding_left=8
  script="$PLUGIN_DIR/front_app.sh"
)
sketchybar --add event window_focus                                     \
           --add item front_app left                                    \
           --set front_app "${front_app[@]}"                            \
           --subscribe front_app front_app_switched window_focus mouse.clicked

# INFO: right-side bar components
clock=(
    icon.drawing=off
    update_freq=10
    script="$PLUGIN_DIR/clock.sh"
    click_script="$PLUGIN_DIR/click.sh 'Control Center' 'Clock'"
)
control_center=(
    icon=􀜊
    click_script="$PLUGIN_DIR/click.sh 'Control Center' 'Control Center'"
)
battery=(
    update_freq=120
    script="$PLUGIN_DIR/battery.sh"
    click_script="$PLUGIN_DIR/click.sh 'Control Center' 'Battery'"
)
wifi=(
    icon=󰤫
    label='Not Connected'
    script="$PLUGIN_DIR/wifi.sh"
    click_script="$PLUGIN_DIR/click.sh 'Control Center' 'Wi‑Fi'"
)
KEYBOARD_EVENT="AppleSelectedInputSourcesChangedNotification"
keyboard=(
    icon.drawing=off
    script="$PLUGIN_DIR/keyboard.sh"
    click_script="osascript -e 'tell application \"System Events\" to tell process \"TextInputMenuAgent\" to perform action \"AXPress\" of menu bar item 1 of menu bar 2'"
)

sketchybar  --add item clock right                              \
            --set clock "${clock[@]}"                           \
                                                                \
            --add item control_center right                     \
            --set control_center "${control_center[@]}"         \
                                                                \
            --add item battery right                            \
            --set battery "${battery[@]}"                       \
            --subscribe battery system_woke power_source_change \
                                                                \
            --add item wifi right                               \
            --set wifi "${wifi[@]}"                             \
            --subscribe wifi wifi_change                        \
                                                                \
            --add event input_change $KEYBOARD_EVENT            \
            --add item keyboard right                           \
            --set keyboard "${keyboard[@]}"                     \
            --subscribe keyboard input_change

##### Finalizing Setup #####
sketchybar --hotload on
sketchybar --update
